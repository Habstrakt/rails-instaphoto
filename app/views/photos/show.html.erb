<div class="card photo-form ">
  <div class="card-body">

		<%= image_tag @photo.image.url(:large) %><br>
	  	<strong><%= @photo.description %></strong><br>

		  <%= link_to profile_path(@photo.user_id) do %><br>
	    <i class="ion-person"> </i><%= @photo.user.name %>
	    <% end %>

          <span class="pull-xs-right"><%= link_to edit_photo_path(@photo) do %>
          <i class="ion-edit"></i> Edit<% end %> |

          <%= link_to @photo, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="ion-close"></i> Destroy<% end %>
        </span>
</div>
</div>
